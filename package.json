{
  "name": "InfinityScroll",
  "version": "1.9.9",
  "description": "Endless HTML-list with virtual scroll",
  "main": "index.js",
  "scripts": {
    "start": "cross-env mode=development VERSION=$npm_package_version webpack serve --config config/webpack.dev.js",
    "build": "cross-env mode=production VERSION=$npm_package_version webpack --config config/webpack.prod.js",
    "buildLib": "cross-env VERSION=$npm_package_version webpack --config config/webpack.libraryBuild.js",
    "datagen": "node mocks/dataGenerator.js",
    "lint": "eslint ./src --format stylish --color",
    "lint:fix": "eslint ./src --fix --format table --color",
    "lintts": "tsc --noEmit",
    "lintall": "eslint ./src --format table && tsc --noEmit",
    "complexity": "eslint ./src --format ./complexity-formatter.js",
    "killLS": "for /f \"tokens=5\" %a in ('netstat -aon ^| findstr :8080') do taskkill /F /PID %a",
    "jsonServer": "json-server --watch mocks/bigList10000.json",
    "check:html": "prettier --check **/*.html --loglevel debug 2>&1 | findstr /C:\"Error\" /C:\"error\" || echo \"No syntax errors found\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/A64Danil/InfinityScroll.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/A64Danil/InfinityScroll/issues"
  },
  "homepage": "https://github.com/A64Danil/InfinityScroll#readme",
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.18.6",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^8.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-webpack-plugin": "^2.5.2",
    "glob": "7.2.3",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^3.0.8",
    "json-server": "^0.17.1",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^1.3.9",
    "postcss-loader": "^5.1.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prettier-webpack-plugin": "^1.2.0",
    "raw-loader": "^4.0.2",
    "sass": "^1.85.1",
    "sass-loader": "^11.0.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.7.4",
    "webpack": "^5.24.3",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.x",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {
    "simplebar": "^6.3.2"
  }
}
