{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",             
    "outDir": "./dist",    
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}